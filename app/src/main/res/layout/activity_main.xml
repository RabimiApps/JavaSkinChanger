<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FAFAFA"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- skinContainer: FrameLayout（MainActivity が参照） -->
    <FrameLayout
        android:id="@+id/skinContainer"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginBottom="12dp"
        android:background="#F5F5F5">

        <!-- SkinView を XML に直接配置し、id=skinView にする -->
        <dev.storeforminecraft.skinviewandroid.library.threedimension.ui.SkinView3DSurfaceView
            android:id="@+id/skinView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <TextView
        android:id="@+id/txtUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ログイン中: ..."
        android:textColor="#222222"
        android:textSize="16sp"
        android:layout_marginBottom="12dp" />

    <!-- モデル切替 -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <TextView
            android:id="@+id/lblModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="モデル: Steve"
            android:textSize="16sp"
            android:textColor="#222222"
            android:layout_marginEnd="8dp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:showText="false" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- 選択 と アップロード -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/btnSelect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="画像を選択"
            android:backgroundTint="#4FC3F7"
            android:textAllCaps="false" />

        <View android:layout_width="12dp" android:layout_height="match_parent"/>

        <Button
            android:id="@+id/btnUpload"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="アップロード"
            android:visibility="gone"
            android:backgroundTint="#BDBDBD"
            android:textAllCaps="false" />
    </LinearLayout>

    <Button
        android:id="@+id/btnLibrary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="スキンライブラリ"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#9C27B0"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ログアウト"
        android:backgroundTint="#F44336"
        android:textAllCaps="false" />

</LinearLayout>